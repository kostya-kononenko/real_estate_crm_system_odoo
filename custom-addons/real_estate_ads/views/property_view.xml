<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="estate_property_tree_view" model="ir.ui.view">
            <field name="name">estate.property.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="type_id"/>
                    <field name="postcode"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="date_availability" invisible="1" column_invisible="1"/>
                </tree>
            </field>
        </record>
        <record id="estate_property_form_view" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" widget="char_emojis" placeholder="Property Name"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <group>
                                <field name="type_id"/>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="best_offer"/>
                                <field name="selling_price"/>
                            </group>
                            <field name="offer_ids">
                                <tree>
                                    <field name="price" readonly="status in ['accepted', 'refused']"/>
                                    <field name="partner_id" readonly="status in ['accepted', 'refused']"/>
                                    <field name="validity" readonly="status in ['accepted', 'refused']"/>
                                    <field name="deadline" readonly="status in ['accepted', 'refused']"/>
                                    <field name="status" readonly="1"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
         <record id="action_property" model="ir.actions.act_window">
             <field name="name">Property</field>
             <field name="res_model">estate.property</field>
             <field name="view_mode">tree,form</field>
             <field name="view_id" ref="estate_property_tree_view"/>
             <field name="help" type="html">
                 <p class="o_view_noconten_smiling_face">
                        Create a property to Advertise
                 </p>
             </field>
         </record>
    </data>
</odoo>
